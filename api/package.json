    "@polkadot/api": "^6.7.1",
    "@polkadot/util-crypto": "^7.8.2",
    "@reef-defi/evm-provider": "^1.0.2",
    "bcryptjs": "^2.4.3",
    "dynamodb-toolbox": "^0.3.4",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^8.3.2"
